<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/addproduct" class="btn btn-success ml-auto">Add Product</a>
        </div>
        <table class="table mt-4">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">title</th>
      <th scope="col">categorie</th>
      <th scope="col">description</th>
      <th scope="col">image</th>
    </tr>
  </thead>
  <tbody>
    {{#each product}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.description}}</td>
      <td><img style="width:50px; hight:50px"  src="{{this.link}}" alt=""></td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>